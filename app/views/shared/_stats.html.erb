<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
  <a href="<%= users_path(format: :zip) %>">
    <strong class="stat">
      Activity log
    </strong>
  </a>
  <% if current_user != @user%>
  <a href="<%= chat_user_path(@user) %>">
    <strong class="stat">
      Send message
    </strong>
  <% end %>
  </a>
</div>
